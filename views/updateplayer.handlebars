<html>
 
    <head>
    <title>Update</title>
        <link rel="stylesheet" type="text/css" href="/static/mystyle.css">
        
    </head>
    <body>
<h1>Update {{player.playerName}}</h1>

<table id="myTable">
 <thead>
    <tr>
         <th>Current Location</th>
         <td>{{playerLocation.locationName}}</td>
         <td>
<form id="update-location" action="/playgame" method="post">
    Change Location: <select name="currentlocation" id="location-selector"> 
        {{#each locations}}
        <option value="{{locationID}}">{{locationName}}</option>
        {{/each}}
    </select><br>
</form>
<button onclick="updatelocation({{player.playerID}})">Update</button>
<script defer>selectlocation({{player.currentLocationID}});</script>
  </td>
     </tr>
    <tr>
         <th>Current Quest</th>
         <td>{{playerQuest.questName}}</td>
                  <td>
              <form name="form1" id="form1" action="/action_page.php">
  Complete Quest: <select name="subject" id="subject">
      <option value = "{{playerQuest.questID}}">{{playerQuest.questName}}</option>
  </select>
  <input type="submit" value="Submit">
</form>
         </td>
     </tr>
    <tr>
         <th>Items</th>
		 <td>
		 {{#each playerItems}}
         {{itemName}}
		 {{/each}}
		 </td>
         <td>
              <form name="form1" id="form1" action="/action_page.php">
  Use Item: <select name="subject" id="subject">
	  {{#each playerItems}}
      <option value = "{{itemID}}">{{itemName}}</option>
	  {{/each}}
  </select>
  <input type="submit" value="Submit">
</form>
         </td>
     </tr>
    <tr>
         <th>Add Quest</th>
                <td>
              <form name="form1" id="form1" action="/action_page.php">
  Add Quest: <select name="subject" id="subject">
    {{#each quests}}
      <option value = "{{questID}}">{{questName}}</option>
      {{/each}}
  </select>
  <input type="submit" value="Submit">
</form>
         </td>
     </tr>
    <tr>
         <th>Health</th>
         <td>{{player.playerHealth}}</td>
     </tr>
    <tr>
         <th>Magic</th>
         <td>{{player.playerMagic}}</td>
         
     </tr>
    <tr>
         <th>Strength</th>
         <td>{{player.strengthStat}}</td>
     </tr>
    <tr>
         <th>Intelligence</th>
         <td>{{player.intelligenceStat}}</td>
     </tr>
    <tr>
         <th>Defence</th>
         <td>{{player.defenceStat}}</td>
     </tr>
 </thead>
</table>
    </body>
</html>