<html>
    <head>
        <title>Play Game</title>
        <link rel="stylesheet" type="text/css" href="mystyle.css">
        <link rel="stylesheet" href ="style.css">
    </head>
        <body>
        <h1 class="title">World of Databases</h1>
        <h2 class="subtitle">Player View<h2>
    <div class="navigation-menu">
        <a href="playgame.html" class="menu-button">Play Game</a>
        <a href="search.html" class="menu-button">Search</a>
		<a href="playermanager.html" class="menu-button">Player Manager</a>
		<a href="contentcreator.html" class="menu-button">Content Creator</a>
	</div>

        <div class="smolDiv"></div>
            
        <table id="myTable">
          <tr class="header">
              <tr>
                <th>Player</th>
                <th>Location</th>
                <th>Items</th>
              </tr>

    {{#each players}}
        <tr>
            <td>{{playerName}}</td>
            <td>{{locationName}}</td>
            <td>{{itemName}}</td>
        </tr>
    {{/each}}
            </table>
            
            <div class="myDiv"></div>
            <table id="myTable">
          <tr class="header">
              <tr>
                <th>Quest</th>
                <th>Location</th>
                <th>Items</th>
              </tr>
    {{#each quests}}
        <tr>
            <td>{{questName}}</td>
            <td>{{locationName}}</td>
            <td>{{itemName}}</td>
        </tr>
    {{/each}}
            </table>
            
            <div class="smolDiv"></div>
            
  <form name="form1" id="form1" action="/action_page.php">
  Change Location: <select name="subject" id="subject">
    {{#each locations}}
      <option value = "{{locationID}}">{{locationName}}</option>
      {{/each}}
  </select>
  <input type="submit" value="Submit">
</form>
            
<div class="smolDiv"></div>
            
 <form name="form1" id="form1" action="/action_page.php">
  Complete Quest: <select name="subject" id="subject">
    {{#each questsdrop}}
      <option value = "{{questID}}">{{questName}}</option>
      {{/each}}
  </select>
  <input type="submit" value="Submit">
</form>
            
 <div class="smolDiv"></div>
            
 <form name="form1" id="form1" action="/action_page.php">
  Use Item: <select name="subject" id="subject">
    {{#each items}}
      <option value = "{{itemID}}">{{itemName}}</option>
      {{/each}}
  </select>
  <input type="submit" value="Submit">
</form>
            
            
        </body>
</html>